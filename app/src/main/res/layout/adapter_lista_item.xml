<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffdf4f"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"
        android:background="#FDFFFD"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/codauxiliarId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="COD AUXILIAR" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numSeqId"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="QT ITEM"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/unidadeId"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/codfilialId"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="CODFILIAL" />

        <TextView
            android:id="@+id/numCaixaId"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="N° CAIXA" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/numCupomId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="N° CUPOM" />

        <TextView
            android:id="@+id/descricaoItemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="DESCRICAO PRODUTO" />
    </LinearLayout>

</LinearLayout>